package pizzeriaRicky.vista;

import java.net.URL;

//import pizzeriaRicky.controlador.LoginController;
import pizzeriaRicky.controlador.ControladorPrincipal;
import pizzeriaRicky.modelo.Empleado;
import pizzeriaRicky.vista.ControladorVentana;
import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.fxml.FXMLLoader;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Tooltip;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;
import javafx.stage.Modality;
import javafx.stage.Stage;
import javafx.stage.StageStyle;
public class Principal extends Application {

	ControladorVentana misVentanas = new ControladorVentana();
    ControladorPrincipal controladorPrincipal;
	BorderPane contenedor = null;

  public static String pantallaCategoria= "categoria";
  public static String archivoCategoria ="categoria.fxml";
 
  public static String patallaUnidad ="unidad";
  public static String archivoUnidad ="unidad.fxml";
  
  public static String pantallaMedida ="medida";
  public static String archivoMedida ="medida.fxml";
  
  Button btnCategoria=null;
  Button btnMedida=null;
  Button btnUnidad=null;
   
 
	public static void main(String [] args){
		launch();
	}
	@Override
	public void start(Stage pizzaPrimary) throws Exception {
		// TODO Auto-generated method stub
		misVentanas.cargarPantalla(Principal.pantallaCategoria,Principal.archivoCategoria);
		misVentanas.cargarPantalla(Principal.pantallaMedida,Principal.archivoMedida);
		misVentanas.cargarPantalla(Principal.archivoMedida,Principal.archivoUnidad);
		
		java.net.URL location= getClass().getResource("Principal.fxml");
		FXMLLoader fxml = new FXMLLoader(location);
		contenedor = (BorderPane)fxml.load();
		controladorPrincipal = fxml.getController();
		
		Group root= new Group();
		contenedor.setCenter(misVentanas);
		root.getChildren().add(contenedor);
	
		
		Scene scene = new Scene(root,1000,700);
		pizzaPrimary.setScene(scene);
		pizzaPrimary.centerOnScreen();
		pizzaPrimary.show();
	}


}
	
