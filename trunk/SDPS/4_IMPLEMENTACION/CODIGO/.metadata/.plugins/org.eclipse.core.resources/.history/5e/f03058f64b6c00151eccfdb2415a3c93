package Vista;


import Controlador.ControladorMedida;
import Controlador.ControladorCategoria;
import Controlador.ControladorUnidad;
import Controlador.InterfazControlador;
import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.fxml.FXMLLoader;
import javafx.geometry.Insets;
import javafx.scene.Group;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.Tooltip;
import javafx.scene.image.ImageView;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.VBox;
import javafx.stage.Modality;
import javafx.stage.Stage;
import javafx.stage.StageStyle;

public class PrincipalInterfaz extends Application {

	VentanaControlador misVentanas = new VentanaControlador();
    InterfazControlador controladorPrincipal;
	BorderPane contenedor = null;

  public static String pantallaCategoria= "categoria";
  public static String archivoCategoria ="categoria.fxml";
 
  public static String patallaUnidad ="unidad";
  public static String archivoUnidad ="unidad.fxml";
  
  public static String pantallaMedida ="medida";
  public static String archivoMedida ="medida.fxml";
  
  Button btnCategoria=null;
  Button btnMedida=null;
  Button btnUnidad=null;
   
 
	public static void main(String [] args){
		launch();
	}
	@Override
	public void start(Stage pizzaPrimary) throws Exception {
		// TODO Auto-generated method stub
		misVentanas.cargarPantalla(PrincipalInterfaz.pantallaCategoria,PrincipalInterfaz.archivoCategoria);
		misVentanas.cargarPantalla(PrincipalInterfaz.pantallaMedida,PrincipalInterfaz.archivoMedida);
		misVentanas.cargarPantalla(PrincipalInterfaz.archivoMedida,PrincipalInterfaz.archivoUnidad);
		
		java.net.URL location= getClass().getResource("Principal.fxml");
		FXMLLoader fxml = new FXMLLoader(location);
		contenedor = (BorderPane)fxml.load();
		controladorPrincipal = fxml.getController();
		
		initComponent();
		Group root= new Group();
		contenedor.setCenter(misVentanas);
		root.getChildren().add(contenedor);
	
		
		Scene scene = new Scene(root,1000,700);
		pizzaPrimary.setScene(scene);
		pizzaPrimary.centerOnScreen();
		pizzaPrimary.show();
	}
	private void initComponent() {
		// TODO Auto-generated method stub
		
		btnCategoria = new Button("Categoria");
   	  
		btnCategoria.setPrefWidth(100);
		btnCategoria.setPrefHeight(50);
		btnCategoria.setTooltip(new Tooltip("Categoria"));
		btnCategoria.setDisable(false);
		btnCategoria.setOnAction(new btnCategoria_click());
		
	
	}

	private class btnCategoria_click implements EventHandler<ActionEvent>{
		   public void handle(ActionEvent arg0){
			   Stage primary= new Stage(StageStyle.UNDECORATED);
		   
			   Stage pizzaPrimary= new Stage(StageStyle.UNDECORATED);
			   try {
				   FXMLLoader miCargador= new FXMLLoader(getClass().getResource(PrincipalInterfaz.archivoCategoria));
				   AnchorPane frm= (AnchorPane)miCargador.load();
				   ControladorCategoria controlador=miCargador.getController();
				   primary.setScene(new Scene (frm,500,500));
				   primary.setResizable(false);
				   primary.initModality(Modality.APPLICATION_MODAL);
				   primary.showAndWait();
		   
		   
			   } catch (Exception e) {
				System.out.println(e.getMessage());
		   }
			   
	   }

		   private class btnUnidad_click implements EventHandler<ActionEvent>{

			@Override
			public void handle(ActionEvent arg0) {
				// TODO Auto-generated method stub
				
			}
			   
		   }

}
}
